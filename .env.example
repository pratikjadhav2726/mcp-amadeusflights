# Amadeus API Configuration (REQUIRED)
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
AMADEUS_ENVIRONMENT=test

# MCP Server Configuration (Optional - have defaults)
MCP_SERVER_NAME=amadeus-flights-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=MCP server for Amadeus flight search capabilities

# Logging Configuration (Optional - has default)
LOG_LEVEL=info

# Rate Limiting (Optional - have defaults)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
# Currency Configuration (Optional - defaults to USD)
DEFAULT_CURRENCY=USD
